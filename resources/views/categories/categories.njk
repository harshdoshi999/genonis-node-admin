{% extends 'master' %}

{% block content %}
<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>All Categories</small></h3>
      </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
      <div class="col-md-12">
        <div class="x_panel">
          <div class="x_content">
            {% for key, message in flashMessages %}
              {{ message }}
            {% endfor %}
            <table class="table table-striped projects">
              <thead>
                <tr>
                  <th style="width: 1%">#</th>
                  <th style="width: 20%">Name</th>
                  <th>Description</th>
                  <th style="width: 20%">Actions</th>
                </tr>
              </thead>
              <tbody>
                {% for category in categories %}
                <tr>
                  <td>{{loop.index}}</td>
                  <td>
                    {{category.name}}
                  </td>
                  <td>
                    {{category.description}}
                  </td>
                  <td>
                    <!-- <a href="projects.html#" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a> -->
                    <a href="/category/edit/{{category.id}}" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                    <a href="/category/delete/{{category.id}}" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>
                  </td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
            <!-- end project list -->

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
{% block extrascripts %}
<style type="text/css">
.statusToggle{color:#fff;}
</style>
{% endblock %}